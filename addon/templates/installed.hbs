<Layout::Section::Header @title={{t "registry-bridge.installed.title"}} />

<Layout::Section::Body class="overflow-y-scroll h-full">
    <div class="m-auto p-8">
        <div class="flex flex-row space-x-4">
            {{#each @model as |extension|}}
                <div class="mb-4">
                    <div class="rounded-lg border border-gray-200 dark:border-gray-700 shadow-sm w-40">
                        <div class="flex items-center justify-center rounded-t-lg w-full h-36" {{background-url extension.icon_url overlay=true}}>
                            <Image src={{extension.icon_url}} class="w-full h-36 rounded-t-lg" alt={{extension.name}} @fallbackSrc={{config "defaultValues.extensionIcon"}} />
                        </div>
                        <div class="text-left px-3 py-2 rounded-b-lg bg-white border-t border-gray-200 dark:border-gray-700 dark:bg-gray-900">
                            <div class="overflow-hidden h-20">
                                <span class="font-semibold text-sm block">{{extension.name}}</span>
                                <span class="text-xs">{{n-a extension.description}}</span>
                            </div>
                            <div class="pt-1 space-y-2">
                                <Button
                                    @type="default"
                                    @text={{t "registry-bridge.common.about-extension" extensionName=extension.name}}
                                    @icon="circle-info"
                                    @onClick={{fn this.about extension}}
                                    class="w-full"
                                />
                                <Button @type="danger" @text={{t "registry-bridge.common.uninstall"}} @icon="trash" @onClick={{fn this.uninstall extension}} class="w-full" />
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
    <Spacer @height="300px" />
</Layout::Section::Body>